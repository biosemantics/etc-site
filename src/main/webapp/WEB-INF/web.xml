		<servlet-name>pdfServlet</servlet-name>
		<servlet-class>edu.arizona.biosemantics.etcsite.server.PDFServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>pdfServlet</servlet-name>
		<url-pattern>*.gpdf</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>downloadServlet</servlet-name>
		<servlet-class>edu.arizona.biosemantics.etcsite.server.DownloadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>downloadServlet</servlet-name>
		<url-pattern>*.dld</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>helpServlet</servlet-name>
		<servlet-class>edu.arizona.biosemantics.etcsite.server.HelpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>helpServlet</servlet-name>
		<url-pattern>/help</url-pattern>
	</servlet-mapping>


	<context-param>
		<!-- max size of the upload request -->
		<param-name>maxSize</param-name>
		<param-value>31457280</param-value>
	</context-param>
	<context-param>
		<!-- Useful in development mode to slow down the uploads in fast networks. 
			Put the number of milliseconds to sleep in each block received in the server. 
			false or 0, means don't use slow uploads -->
		<param-name>slowUploads</param-name>
		<param-value>200</param-value>
	</context-param>

	<servlet>
		<servlet-name>uploadServlet</servlet-name>
		<!-- This is the default servlet, it puts files in session -->
		<servlet-class>edu.arizona.biosemantics.etcsite.server.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>uploadServlet</servlet-name>
		<url-pattern>*.gupld</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>remoteLoggingServiceImpl</servlet-name>
		<servlet-class>com.google.gwt.libideas.logging.server.RemoteLoggingServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteLoggingServiceImpl</servlet-name>
		<url-pattern>/etcsite/logging</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>
			edu.arizona.biosemantics.etcsite.server.ETCSiteServletContextListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			edu.arizona.biosemantics.oto2.oto.server.OTOServletContextListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			edu.arizona.biosemantics.oto2.ontologize.server.OntologizeServletContextListener
		</listener-class>
	</listener>
	<listener>
        <listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
    </listener>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>