	<servlet>
		<servlet-name>Jersey Web Application</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.javahash.jersey;edu.arizona.biosemantics.oto2.oto.server.rest;org.codehaus.jackson.jaxrs;edu.arizona.biosemantics.oto2.ontologize.server.rest</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey Web Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>googleServlet</servlet-name>
		<servlet-class>edu.arizona.biosemantics.etcsite.server.GoogleAuthenticationServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>googleServlet</servlet-name>
		<url-pattern>/googleauth</url-pattern>
	</servlet-mapping>

