<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.semanticMarkup"
	xmlns:form='urn:import:com.sencha.gxt.widget.core.client.form'
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	
	.subMenuEntry {
		margin-left: 20px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}

	.margin15{
		margin-left: 15px;
	}
	
	.note {
		font-size: 14px;
		color: #555555;
	}
	
	.clickable {
		cursor: pointer;
	}
	
	.firstColumn {
		width: 220px;
	}
	
	.bold {
		font-weight: bold;
	}

	.radioPadding{
		padding: 5px;
	}
	</ui:style>

	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.SemanticMarkupShort.gif" 
						imageWidth="65px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="CREATE_INPUT" />
				</g:HorizontalPanel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel>
						<g:VerticalPanel styleName="{style.padding}" />
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">INPUT
								REQUIREMENTS:&nbsp;
							</g:InlineLabel>
							<g:InlineLabel styleName="DescriptionFont">
								Text Capture takes textual morphological descriptions of one or
								more taxa as input. The input files, which must be in English and
								conform to this&nbsp;
							</g:InlineLabel>
							<g:Anchor
								href="http://raw.githubusercontent.com/biosemantics/schemas/master/semanticMarkupInput.xsd"
								target="_blank" styleName="{style.padding}">format</g:Anchor>
							<g:InlineLabel styleName="DescriptionFont">
			            	. Choose one of the following methods to provide the input.
							</g:InlineLabel>
						</g:FlowPanel>
					</g:VerticalPanel>

					<g:VerticalPanel styleName="{style.subMenuEntry}">
					    <g:VerticalPanel spacing="20">
					        <g:RadioButton ui:field="createRadio" name="selectInputMethod" styleName="{style.radioPadding}">Create Files</g:RadioButton>
					        <g:VerticalPanel styleName = "{style.margin15}" ui:field="createPanel" visible="false">
					            <g:InlineLabel>
					                Choose the folder to save the created the files.
					            </g:InlineLabel>
					            <g:Grid cellSpacing="5">
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="createFileFolder" ui:field="newFolderRadio_create" styleName="{style.radioPadding}">Create New Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                    	<g:TextBox enabled="false" ui:field="newFolderTextBox_create"></g:TextBox>    
					                    </g:customCell>
					                </g:row>
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="createFileFolder" ui:field="selectFolderRadio_create" styleName="{style.radioPadding}">Select an existing Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                    	<form:ComboBox ui:field="selectFolderComboBox_create"></form:ComboBox>
					        				<!-- <g:SuggestBox></g:SuggestBox> -->
					                    </g:customCell>
					                </g:row>
					                <g:row>
					                    <g:customCell>
					                    	<g:Button ui:field="createFilesButton" enabled="false">Create Files</g:Button> 
					                    </g:customCell>
					                    <g:cell></g:cell>
					                </g:row>
					            </g:Grid>
					        </g:VerticalPanel>
					        <g:RadioButton name="selectInputMethod" ui:field="uploadRadio" styleName="{style.radioPadding}">Upload Files</g:RadioButton>
					        <g:VerticalPanel styleName = "{style.margin15}" ui:field="uploadPanel" visible="false">
					            <g:InlineLabel>
					                Choose the folder to upload files into.
					            </g:InlineLabel>
					            <g:Grid cellSpacing="5">
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="uploadFileFolder" ui:field="newFolderRadio_upload" styleName="{style.radioPadding}">Create New Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                    	<g:TextBox enabled="false" ui:field="newFolderTextBox_upload"></g:TextBox>    
					                    </g:customCell>
					                </g:row>
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="uploadFileFolder" ui:field="selectFolderRadio_upload" styleName="{style.radioPadding}">Select an existing Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                        <form:ComboBox ui:field="selectFolderComboBox_upload"></form:ComboBox>
					        				<!-- <g:SuggestBox></g:SuggestBox> -->
					                    </g:customCell>
					                </g:row>
					                <g:row>
					                    <g:customCell>
					                    	<g:Button ui:field="uploadFilesButton" enabled="false">Upload</g:Button> 
					                    </g:customCell>
					                    <g:cell></g:cell>
					                </g:row>
					            </g:Grid>
					        </g:VerticalPanel>
					        <g:RadioButton name="selectInputMethod" ui:field="selectRadio" styleName="{style.radioPadding}">Select Existing Folder that contains the input files</g:RadioButton>
					        <g:VerticalPanel styleName = "{style.margin15}" ui:field="selectPanel" visible="false">
					            <g:HorizontalPanel spacing="5">
					        	    <g:InlineLabel>Select an existing Folder</g:InlineLabel>
					        		<form:ComboBox ui:field="selectFolderComboBox_select"></form:ComboBox>
					        		<!-- <g:SuggestBox></g:SuggestBox> -->
					        	</g:HorizontalPanel>
					        </g:VerticalPanel>
					    </g:VerticalPanel>
						<g:FlowPanel styleName="{style.padding}">
							<g:Button ui:field="nextButton">Next Step in Text Capture</g:Button>
						</g:FlowPanel>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder> 