<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.ontologize"
	xmlns:form='urn:import:com.sencha.gxt.widget.core.client.form'
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout"
	xmlns:up="urn:import:gwtupload.client">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	.radioPadding{
		padding: 5px;
	}

	.subMenuEntry {
		margin-left: 20px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.margin15{
		margin-left: 15px;
	}
	

	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.note {
		font-size: 14px;
		color: #555555;
	}
	
	.firstColumn {
		width: 220px;
	}
	
	.bold {
		font-weight: bold;
	}
	
	.DescriptionFont {font-size: 14px;}
	
	</ui:style>
	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.TreeGenerationShort.gif" 
						imageWidth="80px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="CREATE_INPUT" />
				</g:HorizontalPanel>
						<g:InlineLabel>&nbsp;
						</g:InlineLabel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">INPUT
								REQUIREMENTS:&nbsp;
							</g:InlineLabel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								Ontology Building takes as input a folder output by the Text
								Capture tool or a folder containing a XML files which
								conform to this&nbsp;
							</g:InlineLabel>
							<g:Anchor
								href="http://raw.githubusercontent.com/biosemantics/schemas/master/semanticMarkupOutput.xsd"
								target="_blank" styleName="{style.padding}">format</g:Anchor>
						</g:FlowPanel>
						<g:InlineLabel>&nbsp;
						</g:InlineLabel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold} {style.DescriptionFont}">1.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								If you do not have the input ready, please run the Text Capture
								tool first to generate it, or upload a folder here.
							</g:InlineLabel>
						</g:FlowPanel>
						<g:FlowPanel>
							<g:InlineLabel>To Edit, Delete or View uploaded file, go to &nbsp;
							</g:InlineLabel>
							<g:Anchor ui:field="fileManagerAnchor" styleName="{style.DescriptionFont}">File Manager</g:Anchor>
						</g:FlowPanel>
					</g:VerticalPanel>
					<my2:IInputCreateView ui:field="inputCreateView"></my2:IInputCreateView>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder>