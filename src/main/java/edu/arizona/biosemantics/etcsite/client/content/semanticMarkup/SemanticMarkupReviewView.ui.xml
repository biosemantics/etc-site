<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.semanticMarkup"
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
		.otoFrame {
			border: 0;
			width:	900px;
			height: 520px;
			overflow: hidden;
		}
		.subMenuEntry {
			margin-left: 0px;
			padding-top: 10px;
			padding-bottom:10px;
		}
	</ui:style>
	<g:ScrollPanel>
	<lay:CenteredContentPanel>
		<g:VerticalPanel>
		    <g:HorizontalPanel>
			    <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.SemanticMarkupShort.gif" imageWidth="65px" imageHeight="20px" text="" />
			    <my:SubMenu ui:field="subMenu" step="REVIEW_TERMS"/>
			</g:HorizontalPanel>
			<g:Label>Please review the terms learned. Select terms in the left column and drag them into appropriate categories.
			</g:Label>
				<g:Frame ui:field="frame" styleName="{style.otoFrame}">
				</g:Frame>
			<g:Button ui:field="nextButton">Next</g:Button>
		</g:VerticalPanel>
	</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder>