<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.semanticMarkup"
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	
	.subMenuEntry {
		margin-left: 20px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.note {
		font-size: 10px;
		color: #555555;
	}
	
	.clickable {
		cursor: pointer;
	}
	
	.firstColumn {
		width: 220px;
	}
	
	.bold {
		font-weight: bold;
	}
	</ui:style>

	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.SemanticMarkupShort.gif" 
						imageWidth="65px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="INPUT" />
				</g:HorizontalPanel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel>
						<g:VerticalPanel styleName="{style.padding}" />
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">INPUT
								REQUIREMENTS:&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>
								Text Capture takes textual morphological descriptions of one or
								more taxa as input. The input files, which must be in English and
								conform to this&nbsp;
							</g:InlineLabel>
							<g:Anchor
								href="http://raw.githubusercontent.com/biosemantics/schemas/master/semanticMarkupInput.xsd"
								target="_blank" styleName="{style.padding}">format</g:Anchor>
							<g:InlineLabel>
			            	, can be created using the 'Create Input for Text Capture' function in the&nbsp;
							</g:InlineLabel>
							<g:Anchor ui:field="fileManagerAnchor" styleName="{style.clickable}">File
								Manager</g:Anchor>
							<g:InlineLabel>
								.
							</g:InlineLabel>
						</g:FlowPanel>

						<g:InlineLabel>&nbsp;
						</g:InlineLabel>

						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">1.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>
								If you have not done so, please upload or create input taxon
								descriptions using the&nbsp;
							</g:InlineLabel>
							<g:Anchor ui:field="fileManagerAnchor2" styleName="{style.clickable}">File
								Manager</g:Anchor>
						</g:FlowPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">2.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>
								Then, provide the information below and click on "Next Step in Text Capture" to start the
								process:
							</g:InlineLabel>
						</g:FlowPanel>
					</g:VerticalPanel>

					<!-- <g:VerticalPanel styleName="{style.padding}"> -->
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Task Name:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Provide a name to
									identify your task/analysis. This name will be used in Task Manager.</g:InlineLabel>
								 <g:InlineLabel styleName="{style.note}">Also Task Name + Input Folder Name = Output Folder Name
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="taskNameTextBox"></g:TextBox>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Folder:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Select a folder of taxon
									descriptions
								</g:InlineLabel>
								<g:InlineLabel styleName="{style.note}">
									conforming to the format
									requirements.
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:Button ui:field="inputButton">Select Folder</g:Button>
							</g:cell>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:Label ui:field="inputLabel" styleName="{style.important}"></g:Label>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Taxon Group:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									select taxon group relevant 
								</g:InlineLabel>
								<g:InlineLabel styleName="{style.note}">
									to your text.
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:ListBox ui:field="glossaryListBox"
									visibleItemCount="1"></g:ListBox>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Use Empty Glossary:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									If checked no glossary will be used. 
									If unchecked the glossary/ontology relevant 
									to the selected taxon group will be used.
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:CheckBox ui:field="emptyGlossaryCheckbox"></g:CheckBox>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:FlowPanel styleName="{style.padding}">
						<g:Button ui:field="nextButton">Next Step in Text Capture</g:Button>
					</g:FlowPanel>
					<!-- <g:Button styleName="{style.important}" ui:field="button" /> -->
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder> 