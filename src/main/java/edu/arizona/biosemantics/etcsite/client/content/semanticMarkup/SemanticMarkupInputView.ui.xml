<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.semanticMarkup"
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
		.important {
			font-weight: bold;
			margin-left: 10px;
		}
		.subMenuEntry {
			margin-left: 0px;
			padding-top: 10px;
			padding-bottom:10px;
		}
	    .padding{
			padding-top: 10px;
			padding-bottom:10px;
		}
		.note {
			font-size: 10px;
			color: #999999;
		}
	</ui:style>
	
	<lay:CenteredContentPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel>
			    			<my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.SemanticMarkupShort.gif" imageWidth="65px" imageHeight="20px" text="" />
			    			<my:SubMenu ui:field="subMenu" step="INPUT"/>
			</g:HorizontalPanel>
			<g:VerticalPanel styleName="{style.padding}">
			    <g:VerticalPanel>
			        <g:InlineLabel>
			            Please specify a source folder containing the taxon descriptions and its closest taxon group. 
			            </g:InlineLabel>
			        <g:FlowPanel>
			             <g:InlineLabel>
			            You can upload or create the input taxon descriptions using the&nbsp;
			        	</g:InlineLabel>
			        	<g:Anchor ui:field="fileManagerAnchor">File Manager</g:Anchor>
			        	<g:InlineLabel  styleName="{style.padding}">
			            . See </g:InlineLabel>
			        	<g:Anchor href="https://raw.githubusercontent.com/biosemantics/schemas/master/consolidation_01272014/semanticMarkupInput.xsd" target="_blank"  styleName="{style.padding}">&nbsp;format requirements &nbsp;</g:Anchor>
			        	<g:InlineLabel>
			            for input taxon descriptions. 
			        	</g:InlineLabel>
			        </g:FlowPanel>
			    </g:VerticalPanel>
			     <g:VerticalPanel styleName="{style.padding}"/>
			    <g:VerticalPanel styleName="{style.padding}">
			    <g:HorizontalPanel styleName="inputForm">
			        <g:VerticalPanel>
			    	<g:cell verticalAlignment="ALIGN_TOP">
			        	<g:Label>Task name:</g:Label>
			        </g:cell>
			        <g:InlineLabel styleName="{style.note}">
			            Provide a name to
			        </g:InlineLabel>
			         <g:InlineLabel styleName="{style.note}">
			            identify your task.
			        </g:InlineLabel>
			        </g:VerticalPanel>
			        <g:cell verticalAlignment="ALIGN_MIDDLE">
			        	<g:TextBox ui:field="taskNameTextBox"></g:TextBox>
			        	</g:cell>
			    </g:HorizontalPanel>
			    </g:VerticalPanel>
			    <g:VerticalPanel styleName="{style.padding}">
			    <g:HorizontalPanel styleName="inputForm">
			        <g:VerticalPanel>
			            <g:cell verticalAlignment="ALIGN_TOP">
			        	<g:Label>Select Folder:</g:Label>
			        </g:cell>
			            <g:InlineLabel styleName="{style.note}">
			            Select a folder of taxon descriptions
			        </g:InlineLabel>
			         <g:InlineLabel styleName="{style.note}">
			            confirming to the format requirements.
			        </g:InlineLabel>
			        </g:VerticalPanel>
			    	<g:cell verticalAlignment="ALIGN_MIDDLE">
			        	<g:Button ui:field="inputButton">Select Folder</g:Button>
			        </g:cell>
			        <g:cell verticalAlignment="ALIGN_MIDDLE">
			        	<g:Label ui:field="inputLabel" styleName="{style.important}"></g:Label>
			        </g:cell>
			    </g:HorizontalPanel>
			    </g:VerticalPanel>
			    <g:VerticalPanel styleName="{style.padding}">
	   		    <g:HorizontalPanel styleName="inputForm">
	   		        <g:VerticalPanel>
	   		    	<g:cell verticalAlignment="ALIGN_TOP">
			        	<g:Label>Select Taxon Group:</g:Label>
			        </g:cell>
			         <g:InlineLabel styleName="{style.note}">
			            Glossaries/ontologies relevant to the
			        </g:InlineLabel>
			         <g:InlineLabel styleName="{style.note}">
			            taxon group will be used in the process.
			        </g:InlineLabel>
			        </g:VerticalPanel>
			        <g:cell verticalAlignment="ALIGN_MIDDLE">
			        	<g:ListBox ui:field="glossaryListBox" visibleItemCount="1"></g:ListBox>
			        </g:cell>
			    </g:HorizontalPanel>
			    </g:VerticalPanel>
			    <g:FlowPanel styleName="{style.padding}">
			    <g:Button ui:field="nextButton">Next</g:Button>
			    </g:FlowPanel>
				<!--  <g:Button styleName="{style.important}" ui:field="button" /> -->
			</g:VerticalPanel>
		</g:VerticalPanel>
	</lay:CenteredContentPanel>
</ui:UiBinder> 