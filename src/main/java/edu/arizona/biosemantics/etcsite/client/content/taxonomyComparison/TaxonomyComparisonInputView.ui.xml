<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.taxonomyComparison"
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	
	.subMenuEntry {
		margin-left: 20px;
		padding-top: 7px;
		padding-bottom: 10px;
	}
	
	.inputButton {
		margin-left: 10px;
	}
	
	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.note {
		font-size: 14px;
		color: #555555;
	}
	
	.firstColumn {
		width: 230px;
	}
	
	.bold {
		font-weight: bold;
	}
	.margin15{
		margin-left: 15px;
	}
	.DescriptionFont {font-size: 14px;}
	</ui:style>
	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
				    <!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.TaxonomyComparisonShort.gif" imageWidth="80px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="INPUT" />
				</g:HorizontalPanel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel styleName="{style.padding}" />
					<g:VerticalPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								Provide the information below and click on "Next Step in Taxonomy Comparison" to start the
								process:
							</g:InlineLabel>
							<g:InlineLabel>&nbsp;
							</g:InlineLabel>
						</g:FlowPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Task Name:</g:Label>
								</g:cell>
						<!-- 		<g:InlineLabel styleName="{style.note}">
									Provide a name to
									identify your task/analysis. This name will be used in Task Manager.</g:InlineLabel>
								 <g:InlineLabel styleName="{style.note}">Also Task Name + Input Folder Name = Output Folder Name
								</g:InlineLabel> -->
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="taskNameTextBox"></g:TextBox>
							</g:cell>
						</g:HorizontalPanel>
						<g:HorizontalPanel>
						<g:InlineLabel styleName="{style.note}" >
						Provide a name to identify your task/analysis. This name will be used in Task Manager.
						</g:InlineLabel>
						</g:HorizontalPanel>
						<!-- <g:HorizontalPanel>
						<g:InlineLabel styleName="{style.note}" > 
						Also Task Name + Input Folder Name = Output Folder Name
						</g:InlineLabel>		
						</g:HorizontalPanel> -->
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:VerticalPanel ui:field="selectTaxonomiesPanel" visible="false">
				         	<g:HorizontalPanel>				
				         			<g:VerticalPanel styleName="{style.firstColumn}">
					         			<g:cell verticalAlignment="ALIGN_TOP">
											<g:Label>Select Taxonomy 1:</g:Label>
										</g:cell>	 
									</g:VerticalPanel>           
				        			<g:cell verticalAlignment="ALIGN_MIDDLE" width='220px'>
										<g:TextBox ui:field="selectExistingFolderLabel1" enabled="false" width='200px'></g:TextBox>
									</g:cell>
									<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
										<g:Button ui:field="selectExistingFolderButton1">Select Taxonomy 1 Folder</g:Button>
									</g:cell> 
				        	</g:HorizontalPanel>
				        	<g:HorizontalPanel>
				        			<g:VerticalPanel styleName="{style.firstColumn}">
					         			<g:cell verticalAlignment="ALIGN_TOP">
											<g:Label>Select Taxonomy 2:</g:Label>
										</g:cell>	 
									</g:VerticalPanel>   				            
				        			<g:cell verticalAlignment="ALIGN_MIDDLE" width='220px'>
										<g:TextBox ui:field="selectExistingFolderLabel2" enabled="false" width='200px'></g:TextBox>
									</g:cell>
									<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
										<g:Button ui:field="selectExistingFolderButton2">Select Taxonomy 2 Folder</g:Button>
									</g:cell>
				        	</g:HorizontalPanel>
			         	</g:VerticalPanel>
			         	
			         	<g:VerticalPanel ui:field="selectCleanTaxPanel" visible="false">
				         	<g:HorizontalPanel >					            
				        			<g:VerticalPanel styleName="{style.firstColumn}">
					         			<g:cell verticalAlignment="ALIGN_TOP">
											<g:Label>Select CleanTax Folder:</g:Label>
										</g:cell>	 
									</g:VerticalPanel>   
				        			<g:cell verticalAlignment="ALIGN_MIDDLE" width='220px'>
										<g:TextBox ui:field="selectExistingCleanTaxLabel" enabled="false" width='200px'></g:TextBox>
									</g:cell>
									<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
										<g:Button ui:field="selectExistingCleanTaxButton">Select CleanTax Folder</g:Button>
									</g:cell> 
				        	</g:HorizontalPanel>
			         	</g:VerticalPanel>
						
					</g:VerticalPanel> 
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Term Review Folder 1 (optional):</g:Label>
								</g:cell>
							<!-- <g:InlineLabel styleName="{style.note}">
									Select a folder of taxon
									descriptions
								</g:InlineLabel>  	
								<g:InlineLabel styleName="{style.note}">
									conforming to the format requirements.
								</g:InlineLabel>-->
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_TOP">
								<g:TextBox ui:field="inputTermReviewLabel1" enabled="false"></g:TextBox>
							</g:cell>
							<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
								<g:Button styleName="{style.inputButton}" ui:field="inputTermReviewButton1">Select Term Review Input</g:Button>
 							</g:cell> 
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Term Review Folder 2 (optional):</g:Label>
								</g:cell>
							<!-- <g:InlineLabel styleName="{style.note}">
									Select a folder of taxon
									descriptions
								</g:InlineLabel>  	
								<g:InlineLabel styleName="{style.note}">
									conforming to the format requirements.
								</g:InlineLabel>-->
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_TOP">
								<g:TextBox ui:field="inputTermReviewLabel2" enabled="false"></g:TextBox>
							</g:cell>
							<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
								<g:Button styleName="{style.inputButton}" ui:field="inputTermReviewButton2">Select Term Review Input</g:Button>
 							</g:cell>  
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Ontology Folder (optional):</g:Label>
								</g:cell>
							<!-- <g:InlineLabel styleName="{style.note}">
									Select a folder of taxon
									descriptions
								</g:InlineLabel>  	
								<g:InlineLabel styleName="{style.note}">
									conforming to the format requirements.
								</g:InlineLabel>-->
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_TOP">
								<g:TextBox ui:field="inputOntologyLabel" enabled="false"></g:TextBox>
							</g:cell>
							<g:cell verticalAlignment="ALIGN_MIDDLE" width='200px'>
								<g:Button styleName="{style.inputButton}" ui:field="inputOntologyButton">Select Ontology Input</g:Button>
							</g:cell>   
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Taxon Group:</g:Label>
								</g:cell>
<!-- 								<g:InlineLabel styleName="{style.note}"> 
 									select taxon group relevant 
 								</g:InlineLabel> 
 								<g:InlineLabel styleName="{style.note}"> 
 									to your text. 
 								</g:InlineLabel> -->
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:ListBox ui:field="glossaryListBox"
									visibleItemCount="1"></g:ListBox>
							</g:cell>
						</g:HorizontalPanel>
						<g:HorizontalPanel styleName="inputForm">
						<g:InlineLabel styleName="{style.note} DescriptionFont">
						Select taxon group relevant to your text.
						</g:InlineLabel>
								
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.padding}">
						<g:Button ui:field="nextButton">Next Step in Taxonomy Comparison</g:Button>
					</g:VerticalPanel>
					<!-- <g:Button styleName="{style.important}" ui:field="button" /> -->
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder>
