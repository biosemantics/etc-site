<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.matrixGeneration"
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	
	.subMenuEntry {
		margin-left: 20px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.note {
		font-size: 10px;
		color: #555555;
	}
	
	.firstColumn {
		width: 220px;
	}
	
	.bold {
		font-weight: bold;
	}
	</ui:style>
	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.MatrixGenerationShort.gif" 
						imageWidth="80px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="INPUT" />
				</g:HorizontalPanel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel styleName="{style.padding}" />
					<g:VerticalPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">INPUT
								REQUIREMENTS:&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>Matrix Generation takes a folder output by the
								Text Capture tool as input, or a folder with the files
								conforming to this&nbsp;
							</g:InlineLabel>
							<g:Anchor
								href="http://raw.githubusercontent.com/biosemantics/schemas/master/semanticMarkupOutput.xsd"
								target="_blank">format.</g:Anchor>
						</g:FlowPanel>
						<g:InlineLabel>&nbsp;
						</g:InlineLabel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">1.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>
								If you do not have the input ready, please run the Text Capture
								tool first to generate them, or upload files conforming to the
								above-mentioned format using the&nbsp;
							</g:InlineLabel>
							<g:Anchor ui:field="fileManagerAnchor">File Manager.</g:Anchor>
						</g:FlowPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">2.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel>
								Then provide the information below to start the
								process:
							</g:InlineLabel>
							<g:InlineLabel>&nbsp;
							</g:InlineLabel>
						</g:FlowPanel>
					</g:VerticalPanel>
					<!-- <g:VerticalPanel styleName="{style.padding}"> -->
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel styleName="inputForm">
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Task Name:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Provide a name to
									identify your task/analysis. This name will be used in Task Manager.</g:InlineLabel>
								 <g:InlineLabel styleName="{style.note}">Also Task Name + Input Folder Name = Output Folder Name
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="taskNameTextBox"></g:TextBox>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Select Folder:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Select a folder of taxon
									descriptions
								</g:InlineLabel>
								<g:InlineLabel styleName="{style.note}">
									conforming to the format
									requirements.
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:Button ui:field="inputButton">Select Input</g:Button>
							<g:cell verticalAlignment="ALIGN_TOP">
								<g:Label ui:field="inputLabel" styleName="{style.important}"></g:Label>
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Inherit Values:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Choose this option if you want the characters from upper taxa to be inherited by the lower taxa
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:CheckBox ui:field="inheritValuesBox" value="false"></g:CheckBox>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.subMenuEntry}">
						<g:HorizontalPanel>
							<g:VerticalPanel styleName="{style.firstColumn}">
								<g:cell verticalAlignment="ALIGN_TOP">
									<g:Label>Infer Absent/Present States:</g:Label>
								</g:cell>
								<g:InlineLabel styleName="{style.note}">
									Choose this option if you want the software to infer presence/absence of organs/parts
									 , addition to what is said in the text. This option takes time to complete.
								</g:InlineLabel>
							</g:VerticalPanel>
							<g:CheckBox ui:field="generateAbsentPresentBox" value="false"></g:CheckBox>
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.padding}">
						<g:Button ui:field="nextButton">Next Step in Matrix Generation</g:Button>
					</g:VerticalPanel>
					<!-- <g:Button styleName="{style.important}" ui:field="button" /> -->
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder>