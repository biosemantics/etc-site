<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
		.padding{
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.important{
			font-weight:bold;
		}
		.header{
			font-size: 24px;
			font-weight: bold;
			color: #339900;
		}
	</ui:style>
	<g:ScrollPanel>
	<lay:CenteredContentPanel>
		<g:VerticalPanel>
		    <g:Label styleName="{style.header}">ETC Toolkit Development News</g:Label>
		    
		    <g:VerticalPanel styleName="{style.padding}">
		       <g:InlineLabel>The development updates of the ETC toolkit are shown below. </g:InlineLabel>
		    	<g:FlowPanel><g:InlineLabel>Feature requests, bug reports,  and usability issue reports are accepted at&nbsp;</g:InlineLabel>
		    		<g:Anchor href="https://github.com/biosemantics/etc-site/issues?state=open" target="_blank">&nbsp;the ETC GitHub issue tracker</g:Anchor>
		    		<g:InlineLabel>.</g:InlineLabel>
		       </g:FlowPanel>
		    </g:VerticalPanel>
		    
		    <g:VerticalPanel styleName="{style.padding}">
				<g:Grid>
									<g:row>
										<g:cell styleName="{style.important}">Date</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:cell styleName="{style.important}">Features</g:cell>
									</g:row> 
									<!--a new row -->
									<g:row>
										<g:cell>
											March 19, 2015
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Updated ETC-Beta with renewed layout, OTO account linking/creation, Euler interface, Input Creation, updated Text Capture.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Jan 7, 2015
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Updated ETC-Beta with the new modules/features.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Dec 15, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Added download feature in Review step of Text Capture.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Dec 1, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											      ETC tools back online.  
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Nov 15, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        UMass Server firewall configuration changes, ETC tools stopped functioning.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									
									<g:row>
										<g:cell>
											Nov 1, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Beta test of the Key Generation tool start.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Oct 10, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											         Added Matrix Selection module in the Matrix Generation tool.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Sept 5, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											         Revamp Term Review module in the Text Capture tool.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Jul 31, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											         Beta test of the Matrix Generation tool.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									<g:row>
										<g:cell>
											Jul 31, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>	
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Beta release of the Text Capture tool.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									
									
									
				</g:Grid> 
		    </g:VerticalPanel>
		    
		</g:VerticalPanel>
	</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder> 