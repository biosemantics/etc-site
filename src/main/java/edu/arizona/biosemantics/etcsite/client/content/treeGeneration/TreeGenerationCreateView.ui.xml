<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.content.treeGeneration"
	xmlns:form='urn:import:com.sencha.gxt.widget.core.client.form'
	xmlns:my2="urn:import:edu.arizona.biosemantics.etcsite.client.common"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout"
	xmlns:up="urn:import:gwtupload.client">
	<ui:style>
	.important {
		font-weight: bold;
		margin-left: 10px;
	}
	.radioPadding{
		padding: 5px;
	}

	.subMenuEntry {
		margin-left: 20px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.margin15{
		margin-left: 15px;
	}
	

	.padding {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.note {
		font-size: 14px;
		color: #555555;
	}
	
	.firstColumn {
		width: 220px;
	}
	
	.bold {
		font-weight: bold;
	}
	
	.DescriptionFont {font-size: 14px;}
	
	</ui:style>
	<g:ScrollPanel>
		<lay:CenteredContentPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<!-- <my2:ImageLabel styleName="{style.subMenuEntry}" imagePath="images/Text.TreeGenerationShort.gif" 
						imageWidth="80px" imageHeight="20px" text="" /> -->
					<my:SubMenu ui:field="subMenu" step="CREATE_INPUT" />
				</g:HorizontalPanel>
						<g:InlineLabel>&nbsp;
						</g:InlineLabel>
				<g:VerticalPanel styleName="{style.padding}">
					<g:VerticalPanel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold}">INPUT
								REQUIREMENTS:&nbsp;
							</g:InlineLabel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								Key Generation takes as input either a folder output by the Matrix
								Generation tool or a folder containing a taxon-by-character
								matrix file in .csv (comma separated values) format.
							</g:InlineLabel>
						</g:FlowPanel>
						<g:InlineLabel>&nbsp;
						</g:InlineLabel>
						<g:FlowPanel>
							<g:InlineLabel styleName="{style.bold} {style.DescriptionFont}">1.&nbsp;
							</g:InlineLabel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								If you do not have the input ready, please run the Matrix Generation
								tool first to generate it, or upload a folder here.
							</g:InlineLabel>
							<g:InlineLabel styleName="{style.DescriptionFont}">
								. The upload folder should contain only a single valid
								taxon-by-character matrix file in .csv format.
							</g:InlineLabel>
						</g:FlowPanel>
						<g:FlowPanel>
							<g:InlineLabel>To Edit, Delete or View uploaded file, go to &nbsp;
							</g:InlineLabel>
							<g:Anchor ui:field="fileManagerAnchor" styleName="{style.DescriptionFont}">File Manager</g:Anchor>
						</g:FlowPanel>
					</g:VerticalPanel>
					<!-- <g:VerticalPanel styleName="{style.padding}">  -->
					<g:VerticalPanel styleName="{style.subMenuEntry}">
					    <g:VerticalPanel spacing="20">
					        <g:RadioButton name="selectInputMethod" ui:field="uploadRadio" styleName="{style.radioPadding}">Upload Files</g:RadioButton>
					        <g:VerticalPanel styleName = "{style.margin15}" ui:field="uploadPanel" visible="false">
					            <g:InlineLabel>
					                Choose/Create a folder to upload files into.
					            </g:InlineLabel>
					            <g:Grid cellSpacing="5">
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="uploadFileFolder" ui:field="newFolderRadio_upload" styleName="{style.radioPadding}">Create New Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                    	<g:TextBox enabled="false" ui:field="newFolderTextBox_upload"></g:TextBox>    
					                    </g:customCell>
					                    <g:customCell>
					                        <g:Button visible="false" ui:field="createNewFolderButton_upload">Create New Folder</g:Button>
					                    </g:customCell>
					                    <g:customCell>
					                        <g:Label ui:field="createFolderStatusLabel_upload"></g:Label>
					                    </g:customCell>
					                </g:row>
					                <g:row>
					                    <g:customCell>
					                    	<g:RadioButton name="uploadFileFolder" ui:field="selectFolderRadio_upload" styleName="{style.radioPadding}">Select an Existing Folder</g:RadioButton>    
					                    </g:customCell>
					                    <g:customCell>
					                        <form:ComboBox ui:field="selectFolderComboBox_upload"></form:ComboBox>
					        				<!-- <g:SuggestBox></g:SuggestBox> -->
					                    </g:customCell>
					                </g:row>
					            </g:Grid>
		     					<up:SingleUploader ui:field="uploader" type="BUTTON" autoSubmit="true" avoidRepeatFiles="false"/>
		     					<!-- validExtensions="xml" -->
		     				 	<g:Button ui:field="uploadFilesButton" title="Select a parent folder before uploading one or more files">Upload Files</g:Button>
		     				 	<g:SimplePanel addStyleNames="GWTUpld" ui:field="statusWidgetContainer"></g:SimplePanel>
					        </g:VerticalPanel>
					        <g:HorizontalPanel spacing="5">
					   			<g:RadioButton name="selectInputMethod" ui:field="selectRadio" styleName="{style.radioPadding}">Select Existing Folder</g:RadioButton>
					        	<g:HorizontalPanel styleName = "{style.margin15}" ui:field="selectPanel" visible="false">
					        			<g:cell verticalAlignment="ALIGN_MIDDLE">
											<g:Button ui:field="selectFolderButton">Select Folder</g:Button>
										</g:cell>
										<g:cell verticalAlignment="ALIGN_MIDDLE">
											<g:Label ui:field="selectedFolderLabel"></g:Label>
										</g:cell>
					        	</g:HorizontalPanel>
					        </g:HorizontalPanel>
					    </g:VerticalPanel>
						<g:VerticalPanel styleName="{style.padding}">
							<g:Button ui:field="nextButton">Next Step in Key Generation</g:Button>
						</g:VerticalPanel>
					</g:VerticalPanel>
					<!-- <g:Button styleName="{style.important}" ui:field="button" /> -->
				</g:VerticalPanel>
			</g:VerticalPanel>
		</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder>