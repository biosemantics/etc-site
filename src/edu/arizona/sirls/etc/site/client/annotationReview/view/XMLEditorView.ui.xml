<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.textArea {
			width:100%;
			height:100%;
			margin-left: auto;
			margin-right: auto;
		}
		.verticalPanel {
			width:100%;
			height:100%;
		}
		.horizontalPanel {
			height:30px;
			margin-left: auto;
			margin-right: auto;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.verticalPanel}">	
		<g:RichTextArea ui:field="textArea" styleName="{style.textArea}"></g:RichTextArea>
		<!--  <g:TextArea ui:field="textArea" styleName="{style.textArea}"></g:TextArea> -->
		<g:HorizontalPanel styleName="{style.horizontalPanel}">
			<g:Button ui:field="validateButton">Validate</g:Button>
			<g:Button ui:field="saveButton">Save</g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 