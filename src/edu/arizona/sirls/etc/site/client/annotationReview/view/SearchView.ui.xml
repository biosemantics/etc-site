<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.horizontalPanel {
			width:900px;
			margin-left: auto;
			margin-right: auto;
		}
		.verticalPanel {
			padding: 20px;
        }
        .searchParameter {
			width: 300px;
		}
		</ui:style>
	<g:HorizontalPanel addStyleNames="{style.horizontalPanel">
       <g:cell verticalAlignment="ALIGN_TOP" width="200px">
	       <g:VerticalPanel addStyleNames="{style.verticalPanel}">
	       	 <g:Label addStyleNames="{style.searchParameter}">Input:</g:Label>
		     <g:Button ui:field="inputButton" addStyleNames="{style.searchParameter}">Select</g:Button>
		     <g:Label ui:field="inputLabel" addStyleNames="{style.searchParameter}" ></g:Label>
	       </g:VerticalPanel>
       </g:cell>
       <g:cell verticalAlignment="ALIGN_TOP" width="300px">
	       <g:VerticalPanel addStyleNames="{style.verticalPanel}">
	       	 <g:Label addStyleNames="{style.searchParameter}">Search:</g:Label>
	         <g:ListBox ui:field="typeListBox" addStyleNames="{style.searchParameter}"></g:ListBox>
	       </g:VerticalPanel>
	   </g:cell>
	   <g:cell verticalAlignment="ALIGN_TOP" width="300px">
	       <g:VerticalPanel addStyleNames="{style.verticalPanel}">
	       	 <g:Label ui:field="typeLabel" addStyleNames="{style.searchParameter}"></g:Label>
      	     <g:Grid>
		       <g:row>
		       	<g:customCell>
		       	  <g:Label ui:field="elementListBoxLabel">Element:</g:Label>
		       	</g:customCell>
		       	<g:customCell>
		          <g:ListBox ui:field="elementListBox" addStyleNames="{style.searchParameter}"></g:ListBox>
		        </g:customCell>
		       </g:row>
		       <g:row>
		        <g:customCell>
		          <g:Label ui:field="attributeListBoxLabel">Attribute:</g:Label>
		        </g:customCell>
		        <g:customCell>
		          <g:ListBox ui:field="attributeListBox" addStyleNames="{style.searchParameter}"></g:ListBox>
		        </g:customCell>
		       </g:row> 
		       <g:row> 
	    	    <g:customCell>
		          <g:Label ui:field="valueTextBoxLabel">Value:</g:Label>
		        </g:customCell>
		        <g:customCell>
		          <g:TextBox ui:field="valueTextBox" addStyleNames="{style.searchParameter}"></g:TextBox>
		        </g:customCell>
		       </g:row>
     		   <g:row> 
	    	    <g:customCell>
		          <g:Label ui:field="xpathTextBoxLabel">XPath:</g:Label>
		        </g:customCell>
		        <g:customCell>
		          <g:TextBox ui:field="xpathTextBox" addStyleNames="{style.searchParameter}"></g:TextBox>
		        </g:customCell>
		       </g:row>
         	   <g:row> 
	    	    <g:cell></g:cell>
		        <g:customCell>
		          <g:Button ui:field="searchButton" addStyleNames="{style.searchParameter}">Search</g:Button>
		        </g:customCell>
		       </g:row>
		     </g:Grid>
	       </g:VerticalPanel>
	    </g:cell>
	    <g:cell verticalAlignment="ALIGN_TOP" width="300px">
	       <g:VerticalPanel addStyleNames="{style.verticalPanel}">
	       	 <g:Label addStyleNames="{style.searchParameter}">XPath:</g:Label>
	       	 <g:Grid>
	       	  <g:row>
	       	  	<g:customCell>
		          <g:Label>Constructed:</g:Label>
		        </g:customCell>
		        <g:customCell>
		          <g:Label ui:field="xpathLabel" addStyleNames="{style.searchParameter}"></g:Label>
		        </g:customCell>
	       	  </g:row>
	       	 </g:Grid>
	       </g:VerticalPanel>
	   </g:cell>
    </g:HorizontalPanel>	
</ui:UiBinder> 