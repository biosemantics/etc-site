<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:my="urn:import:edu.arizona.sirls.etc.site.client.annotationReview.view">
    <ui:style>        
        .westPanel {
			padding: 20px
        }
		.northPanel {
			width:900px;
			margin-left: auto;
			margin-right: auto;
		}
        .centerPanel {
            height:100%;
            width:100%;
			padding: 20px
        }
    </ui:style>
     <g:DockLayoutPanel unit='PX'>
       <g:north size='194' styleName="{style.northPanel}">
       	   <my:SearchViewImpl ui:field="search"></my:SearchViewImpl>
       </g:north>
       <g:west size='400' styleName="{style.westPanel}">
           <my:ResultViewImpl ui:field="result"></my:ResultViewImpl>
       </g:west>
       <g:center styleName="{style.centerPanel}">
           <my:XMLEditorViewImpl ui:field="xmlEditor"></my:XMLEditorViewImpl>
       </g:center>      
     </g:DockLayoutPanel>
</ui:UiBinder> 